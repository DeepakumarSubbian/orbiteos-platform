# ============================================
# ORBITEOS CONFIGURATION
# ============================================

# Deployment Type
DEPLOYMENT_TYPE=residential  # or 'commercial'

# License Key (Provided after purchase, use DEMO-MODE for development)
LICENSE_KEY=DEMO-MODE

# ============================================
# LOCATION (for solar simulation)
# ============================================
LATITUDE=52.3676          # Amsterdam (change to your location)
LONGITUDE=4.9041
TIMEZONE=Europe/Amsterdam

# ============================================
# SIMULATORS
# ============================================

# Solar System
SOLAR_PEAK_POWER_KW=6.0
SOLAR_PANELS=20
SOLAR_EFFICIENCY=0.85

# Battery Storage
BATTERY_CAPACITY_KWH=13.5
BATTERY_MAX_CHARGE_KW=5.0
BATTERY_EFFICIENCY=0.92
BATTERY_MIN_SOC=20
BATTERY_MAX_SOC=95

# EV Charger
EV_CHARGER_POWER_KW=11
EV_BATTERY_CAPACITY_KWH=40
EV_ARRIVAL_TIME=18:00
EV_DEPARTURE_TIME=07:00

# Heat Pump
HEAT_PUMP_POWER_KW=3.5
HEAT_PUMP_COP=3.5
THERMOSTAT_TARGET=20

# ============================================
# ENERGY PRICING
# ============================================
PRICE_SOURCE=simulation   # options: simulation, entsoe, nordpool
PRICE_UPDATE_INTERVAL=3600  # seconds
BASE_PRICE_EUR_KWH=0.20

# ENTSO-E API (optional, for real prices)
ENTSOE_API_KEY=
COUNTRY_CODE=NL

# ============================================
# LLM CONFIGURATION
# ============================================

# Default: Open Source (FREE)
LLM_PROVIDER=ollama
LLM_MODEL=llama3.1:8b

# Premium Options (optional, requires API keys)
# LLM_PROVIDER=claude
# ANTHROPIC_API_KEY=sk-ant-your-key-here
# LLM_MODEL=claude-3-5-sonnet-20241022

# LLM_PROVIDER=openai
# OPENAI_API_KEY=sk-your-key-here
# LLM_MODEL=gpt-4-turbo

# ============================================
# DATABASE PASSWORDS (CHANGE THESE!)
# ============================================
POSTGRES_PASSWORD=change_this_secure_password
OPENEMS_DB_PASSWORD=openems_secure_password
ORBITEOS_DB_PASSWORD=orbiteos_secure_password
TIMESCALE_PASSWORD=timescale_secure_password

# ============================================
# HOME ASSISTANT
# ============================================
# Generate a long-lived access token from HA UI after first setup
HA_LONG_LIVED_TOKEN=

# ============================================
# GRAFANA
# ============================================
GRAFANA_PASSWORD=admin

# ============================================
# WHITE-LABEL CONFIGURATION (Commercial Only)
# ============================================
COMPANY_NAME=OrbitEOS
COMPANY_LOGO_URL=
CUSTOM_DOMAIN=
PRIMARY_COLOR=#00A86B
SECONDARY_COLOR=#0066CC
